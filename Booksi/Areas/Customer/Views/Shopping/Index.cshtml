@model ShoppingCardVM


<form method="post">
    <h1> Shoppings</h1>

    <div class="container"> 
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Shopping List
                </h2>
            </div>
            <div class="col-6">
                <h2 class="text-end"> 
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-file-earmark-plus-fill">Contiune Shopping</i> 
                    </a>
                </h2>
            </div>
        </div>
    </div>


    <table class="table table-bordered table-striped"> 
        <thead>
            <tr> 
                <th> 
                    Title
                <th>
                    Author
                </th> 
                <th>
                    Count
                </th>
                <th>
                    Price
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var m in Model.shoppingCards.OrderByDescending(x => x.Book.Title)){
                <tr>
                    <td>
                        @m.Book.Title
                    </td>
                    <td>
                        @m.Book.Author
                    </td>
                    <td>
                        @m.BooksCount
                    </td>
                    <td>
                        @m.Book.Price
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">

                        </div>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-id="@m.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@m.Id" class="btn btn-primary">
                            <i class="bi bi-file-earmark-x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container"> 
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Total Price: @Model.totalPrice.ToString("c")
                </h2>
            </div>
        </div>
    </div>
</form>
