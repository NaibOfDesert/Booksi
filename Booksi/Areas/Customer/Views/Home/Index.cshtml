@model IEnumerable<Book>

<div class="row pb-2">
    @foreach(var m in Model){
        <div class="col-lg-2 col-sm-4">
            <div class="row p-2">
                <div class="card border-0 p-3 shadow border-top border-5 rounded">
                    <img src="@m.ImageUrl" class="card-img-top rounded"/>
                    <div class="card-body pb-0">
                        <div class="p-1">
                            <p class="card-title h6 text-dark text-uppercase text-center">
                                @m.Title    
                            </p>
                            <p class="card-title text-primary text-center">
                                @m.Author
                            </p>
                        </div>
                        <div class="p-1">
                            <p class="text-dark text-center">
                               Price: <span>@m.Price.ToString("c")</span>    
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@m.Id" class="btn btn-primary form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>