@model Booksi.Models.Model.Book

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Book
            </h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input asp-for="Title" type="text" class="form-control"/>
            <label asp-for="Title"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="Author" type="text" class="form-control"/>
            <label asp-for="Author"></label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="ISBN" type="number" class="form-control"/>
            <label asp-for="ISBN">ISBN</label>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="Description" type="text" class="form-control"/>
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="Price" type="number" class="form-control"/>
            <label asp-for="Price">Price</label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="ExtraPrice" type="number" class="form-control"/>
            <label asp-for="ExtraPrice">Extra Price</label>
            <span asp-validation-for="ExtraPrice" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="ImageUrl" type="number" class="form-control" value="1"/>
            <label asp-for="ImageUrl"></label>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 mb-3">
            <input asp-for="CategoryId" type="number" class="form-control" value="1"/>
            <label asp-for="CategoryId"></label>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-2 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    Update
                </button>
            </div>
            <div class="col-2 col-md-3">
                <a asp-asp-area="Admin" asp-controller="Book" asp-action="Index" class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>


        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}